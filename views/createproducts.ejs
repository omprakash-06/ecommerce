<%- include('./partials/header') %>

<div class="min-h-screen flex flex-col">
    <div class="container px-10 py-20 flex flex-grow">
        <div class="w-[25%] flex h-screen flex-col items-start">
            <div class="flex flex-col">
                <a class="block w-fit mb-2" href="">All Products</a>
                <a class="block w-fit mb-2" href="">Create new product</a>
            </div>
        </div>
        <main class="w-3/4 bg-white p-8 shadow ml-4">
            <h2 class="text-xl font-bold mb-4">Create New Product</h2>
            <form action="/products/create" method="post" enctype="multipart/form-data">
                <div class="mb-6">
                    <h3 class="text-lg font-semibold mb-2">Product Details</h3>
                    <div class="mb-4">
                        <label class="block mb-2 font-medium">Product Image</label>
                        <input type="file" class="py-2 px-4 rounded" name="image" required>
                    </div>
                    <div class="grid grid-cols-2 gap-4">
                        <input type="text" placeholder="Product Name" name="name" class="border p-2 rounded w-full" required>
                        <input type="text" placeholder="Product Price" name="price" class="border p-2 rounded w-full" required>
                        <input type="text" placeholder="Discount Price" name="discount" class="border p-2 rounded w-full">
                        <input type="text" placeholder="Platform Fee" name="fee" class="border p-2 rounded w-full">
                    </div>
                </div>

                <div>
                    <h3 class="text-lg font-semibold mb-2">Panel Details</h3>
                    <div class="grid grid-cols-2 gap-4">
                        <input type="text" placeholder="Background Color" name="bgcolor" class="border p-2 rounded w-full" required>
                        <input type="text" placeholder="Panel Color" name="panelcolor" class="border p-2 rounded w-full" required>
                        <input type="text" placeholder="Text Color" name="textcolor" class="border p-2 rounded w-full" required>
                    </div>
                </div>
                <input class="px-5 py-2 rounded mt-3 bg-blue-500 text-white" type="submit" value="Create New Product">
            </form>
        </main>
    </div>
</div>

<%- include('./partials/footer') %>
